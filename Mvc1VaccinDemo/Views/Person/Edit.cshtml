@model Mvc1VaccinDemo.ViewModels.PersonEditViewModel  


@{
    ViewData["Title"] = "Edit person";
}

<section class="py-5">
    <div class="row">
        <div class="col-lg-12 mb-5">
            <div class="card">
                <div class="card-header">
                    <h3 class="h6 text-uppercase mb-0">Edit Person</h3>
                </div>
                
                <div class="card-body">
                    <form method="post" asp-controller="Person" asp-action="Edit">


                        <div class="form-group">
                            <label asp-for="Name">Namn</label>
                            <input class="form-control" asp-for="Name">
                            <span asp-validation-for="Name" class="field-validation-error"></span>
                        </div>


                        <div class="form-group">
                            <label asp-for="PersonalNumber">Personnummer</label>
                            <input class="form-control" asp-for="PersonalNumber">
                            <span asp-validation-for="PersonalNumber" class="field-validation-error"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="EmailAddress">Email</label>
                            <input class="form-control" asp-for="EmailAddress">
                            <span asp-validation-for="EmailAddress" class="field-validation-error"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="StreetAddress">Gatuadress</label>
                            <input class="form-control" asp-for="StreetAddress">
                            <span asp-validation-for="StreetAddress" class="field-validation-error"></span>
                        </div>


                        <div class="form-group">
                            <label asp-for="PostalCode">Postnummer</label>
                            <input class="form-control" asp-for="PostalCode">
                            <span asp-validation-for="PostalCode" class="field-validation-error"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="City">Stad</label>
                            <input class="form-control" asp-for="City">
                            <span asp-validation-for="City" class="field-validation-error"></span>
                        </div>



                        <div class="form-group">
                            <label asp-for="PreliminaryNextVaccinDate">Nästa vaccinering (prel)</label>
                            <input class="form-control" asp-for="PreliminaryNextVaccinDate">
                            <span asp-validation-for="PreliminaryNextVaccinDate" class="field-validation-error"></span>
                        </div>




                        <div class="form-group">
                            <label asp-for="SelectedVaccineringsFasId">Vaccineringsfas</label>
                            <select class="form-control"
                                    asp-for="SelectedVaccineringsFasId"
                                    asp-items="Model.AllaVaccineringsFaser"></select>
                        </div>








                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>

            </div>

        </div>
    </div>
</section>



