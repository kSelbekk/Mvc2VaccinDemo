@model Mvc1VaccinDemo.ViewModels.VaccinNewViewModel


@{
    ViewData["Title"] = "Nytt vaccin";
}



<section class="py-5">
    <div class="row">
        <div class="col-lg-12 mb-5">
            <div class="card">
                <div class="card-header">
                    <h3 class="h6 text-uppercase mb-0">New Vaccin</h3>
                </div>

                <div class="card-body">
                    <form asp-controller="Vaccin" asp-action="New" method="post">
                        <div class="form-group">
                            <label asp-for="Namn">Namn</label>
                            <input class="form-control" asp-for="Namn">
                        </div>
                        <div class="form-group">
                            <label asp-for="SelectedSupplierId">Supplier</label>
                            <select class="form-control"
                                    asp-for="SelectedSupplierId"
                                    asp-items="Model.AllSuppliers"></select>
                            <span asp-validation-for="SelectedSupplierId" class="field-validation-error"></span>
                        </div>


                        <div class="form-group">
                            <label asp-for="EuOkStatus">Okstatus</label>
                            <input class="form-control" asp-for="EuOkStatus">
                        </div>
                        <div class="form-group">
                            <label asp-for="Type">Type</label>
                            <select class="form-control" asp-for="Type" asp-items="Model.Types"></select>
                        </div>


                        <div class="form-group">
                            <label asp-for="AntalDoser">Antal doser</label>
                            <input class="form-control" asp-for="AntalDoser">
                            <span asp-validation-for="AntalDoser" class="input-validation-error"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Comment">Comment</label>
                            <textarea rows="5" cols="30"
                                      class="form-control" asp-for="Comment"></textarea>
                            <span asp-validation-for="Comment" class="field-validation-error"></span>
                        </div>


                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>

            </div>

        </div>
    </div>
</section>



