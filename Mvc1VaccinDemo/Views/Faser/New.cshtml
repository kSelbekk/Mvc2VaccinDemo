@model Mvc1VaccinDemo.ViewModels.VaccineringsFasNewViewModel


@{
    ViewData["Title"] = "New Fas";
}

<section class="py-5">
    <div class="row">
        <div class="col-lg-12 mb-5">
            <div class="card">
                <div class="card-header">
                    <h3 class="h6 text-uppercase mb-0">Ny Vaccinationsfas</h3>
                </div>

                <div class="card-body">
                    <form method="post" asp-controller="Faser" asp-action="New">

                        <div class="form-group">
                            <label asp-for="Name">Name</label>
                            <input class="form-control" asp-for="Name">
                            <span asp-validation-for="Name" class="field-validation-error"></span>
                        </div>


                        <div class="form-group">
                            <label asp-for="SelectedMyndighetsId">Ansvarig myndighet</label>
                            <select class="form-control" asp-for="SelectedMyndighetsId"
                                    asp-items="Model.AllaMyndigheter"> </select>
                            <span asp-validation-for="SelectedMyndighetsId" class="field-validation-error"></span>
                        </div>


                        <div class="form-group">
                            <label asp-for="Comment">Comment</label>
                            <textarea rows="5" cols="30"
                                      class="form-control" asp-for="Comment"></textarea>
                            <span asp-validation-for="Comment" class="field-validation-error"></span>
                        </div>


                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>

            </div>

        </div>
    </div>
</section>



