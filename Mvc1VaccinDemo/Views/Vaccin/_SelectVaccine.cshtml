@model Mvc1VaccinDemo.ViewModels.SelectVaccineViewModel


@{
    Layout = null;    
}


@if (!string.IsNullOrEmpty(Model.SelectedVaccinName))
{
    <div class="row">
        <div class="col-lg-12">
            <div class="card mb-5 mb-lg-0">
                <div class="card-header">
                    <h2 class="h6 mb-0 text-uppercase">Leverans status: @Model.SelectedVaccinName</h2>
                </div>
                <div class="card-body">
                    <p class="text-gray mb-5">Uppgifter är ungefärliga</p>
                    <div class="d-flex justify-content-between align-items-start align-items-sm-center mb-4 flex-column flex-sm-row">
                        <div class="left d-flex align-items-center">
                            <div class="icon icon-lg shadow mr-3 text-gray"><i class="fab fa-dropbox"></i></div>
                            <div class="text">
                                <h6 class="mb-0 d-flex align-items-center"> <span>Antal beställda doser</span><span class="dot dot-sm ml-2 bg-violet"></span></h6><small class="text-gray">Per idag</small>
                            </div>
                        </div>
                        <div class="right ml-5 ml-sm-0 pl-3 pl-sm-0 text-violet">
                            <h5>@Model.NrOrdered</h5>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between align-items-start align-items-sm-center mb-4 flex-column flex-sm-row">
                        <div class="left d-flex align-items-center">
                            <div class="icon icon-lg shadow mr-3 text-gray"><i class="fab fa-apple"></i></div>
                            <div class="text">
                                <h6 class="mb-0 d-flex align-items-center"> <span>Nästa leveransdag</span><span class="dot dot-sm ml-2 bg-green"></span></h6><small class="text-gray">Kan komma en dag tidigare</small>
                            </div>
                        </div>
                        <div class="right ml-5 ml-sm-0 pl-3 pl-sm-0 text-green">
                            <h5>@Model.FirstDeliveryDate.ToString("yyyy-MM-dd")</h5>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between align-items-start align-items-sm-center mb-4 flex-column flex-sm-row">
                        <div class="left d-flex align-items-center">
                            <div class="icon icon-lg shadow mr-3 text-gray"><i class="fas fa-shopping-basket"></i></div>
                            <div class="text">
                                <h6 class="mb-0 d-flex align-items-center"> <span>Antal doser</span><span class="dot dot-sm ml-2 bg-blue"></span></h6><small class="text-gray">I ovan leverans</small>
                            </div>
                        </div>
                        <div class="right ml-5 ml-sm-0 pl-3 pl-sm-0 text-blue">
                            <h5>@Model.NrInFirstDelivery</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <br />
}

